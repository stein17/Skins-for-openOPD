<skin>
<!--  FlipClock_Infobar-->
<!-- TEMPLATES FlipClock_Infobar-->
 <screen name="template_clock_infobar">
     <widget source="global.CurrentTime" render="Label" position="1587,785" size="140,120" font="DIGI; 100" halign="center" backgroundColor="black" transparent="1" foregroundColor="bluetitle">
      <convert type="ClockToText">Format:%H</convert>
    </widget>
    <widget source="global.CurrentTime" render="Label" position="1767,785" size="140,120" font="DIGI; 100" halign="center" backgroundColor="black" transparent="1" foregroundColor="bluetitle">
      <convert type="ClockToText">Format:%M</convert>
    </widget>
    <widget source="global.CurrentTime" render="FixedLabel" text=":" font="DIGI; 100" position="1729,790" size="40,100" halign="center" zPosition="3" valign="center" foregroundColor="cyan1" transparent="1">
      <convert type="BLBlinkingClock" />
      <convert type="ConditionalShowHide">Blink</convert>
    </widget>
    <widget source="global.CurrentTime" render="Label" position="1596,960" size="300,58" font="Regular; 42" halign="center" backgroundColor="black" foregroundColor="bluetitle" transparent="1" zPosition="0">
      <convert type="ClockToText">Format:%A</convert>
    </widget>
    <widget source="global.CurrentTime" render="Label" position="1596,1020" size="300,50" font="Regular; 42" halign="center" backgroundColor="black" foregroundColor="bluetitle" transparent="1" zPosition="0">
      <convert type="ClockToText">Format:%d.%b.%Y</convert>
    </widget>
 </screen>
   <!-- TEMPLATES Pixmap_Infobar-->
