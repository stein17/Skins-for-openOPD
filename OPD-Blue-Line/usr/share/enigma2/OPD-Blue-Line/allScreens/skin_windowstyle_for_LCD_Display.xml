  <skin>
    <!-- windowstyle for LCD Display -->
	
 <windowstyle type="skinned" id="0">
    <title offset="15,15" font="Regular;36" />
    <color name="Background" color="background" />
    <color name="LabelForeground" color="white" />
    <color name="ListboxBackground" color="background" />
    <color name="ListboxForeground" color="white" />
    <color name="ListboxSelectedBackground" color="backgroundBlue" />
    <color name="ListboxSelectedForeground" color="white" />
    <color name="ListboxMarkedBackground" color="background" />
    <color name="ListboxMarkedForeground" color="cyan1" />
    <color name="ListboxMarkedAndSelectedBackground" color="backgroundBlue" />
    <color name="ListboxMarkedAndSelectedForeground" color="cyan1" />
    <color name="WindowTitleForeground" color="white" />
    <color name="WindowTitleBackground" color="background" />

    <!-- screen border png's -->
    <borderset name="bsWindow">
      <pixmap pos="bpTopLeft" filename="window/bs_tl.png" />
      <pixmap pos="bpTop" filename="window/bs_t.png" />
      <pixmap pos="bpTopRight" filename="window/bs_tr.png" />
      <pixmap pos="bpLeft" filename="window/bs_l.png" />
      <pixmap pos="bpRight" filename="window/bs_r.png" />
      <pixmap pos="bpBottomLeft" filename="window/bs_bl.png" />
      <pixmap pos="bpBottom" filename="window/bs_b.png" />
      <pixmap pos="bpBottomRight" filename="window/bs_br.png" />
    </borderset>
    <borderset name="bsListboxEntry">
      <pixmap filename="line.png" pos="bpTop" />
      <pixmap filename="line.png" pos="bpBottom" />
    </borderset>
  </windowstyle>
  <!-- Main screen colors (id=1 LCD) FHD -->
  <windowstyle type="skinned" id="1">
    <color name="Background" color="black" />
    <color name="LabelForeground" color="white" />
    <color name="ListboxBackground" color="black" />
    <color name="ListboxForeground" color="white" />
    <color name="ListboxSelectedBackground" color="black" />
    <color name="ListboxSelectedForeground" color="white" />
    <color name="ListboxMarkedBackground" color="black" />
    <color name="ListboxMarkedForeground" color="white" />
    <color name="ListboxMarkedAndSelectedBackground" color="black" />
    <color name="ListboxMarkedAndSelectedForeground" color="white" />
    <color name="WindowTitleForeground" color="white" />
    <color name="WindowTitleBackground" color="black" />
  </windowstyle>
  </skin>